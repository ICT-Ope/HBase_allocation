+    }
+    this.singalHandler();
+    synchronized (this.PriorityGetTimes) {
+      this.PriorityGetTimes[this.getCondition(ret.orgPri)]++;
+    }
+    this.decreaseSize();
+    return ret.getCall();
+
+  }
