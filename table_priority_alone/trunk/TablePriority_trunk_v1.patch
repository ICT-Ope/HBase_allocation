+              pri += plus.getDeletePlus();
+
+            } else if (row instanceof Get) {
+              pri += plus.getGetPlus();
+
+            } else if (row instanceof Put) {
+              pri += plus.getPutPlus();
+            }
+          }
+        }
+        return pri;
+      }
